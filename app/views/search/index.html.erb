<div class="content">
  <div class="main">
    <h1></h1>

    <div ng-controller="SearchController">

      <form ng-submit="search()">
        <div class="select-language">
          <select ng-model="language" ng-options="l.name for l in languagesList"></select>
        </div>

        <div class="search-snippet">
          <input type="text" ng-model="search_snippet" placeholder="code snippet to search"/>
        </div>

        <button class="btn">Search</button>
      </form>

      <div class="results">
        {{search_results}}
      </div>
    </div>
  </div>
</div>